generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id          String   @id @unique @default(uuid())
  uuid        String   @unique
  email       String   @unique
  role        Role     @default(Tenant)
  phoneNumber String?
  plan        Plan     @default(Free)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

enum Role {
  Tenant
  Agent
  Landlord
}

enum Plan {
  Free
  Basic
  Premium
}
